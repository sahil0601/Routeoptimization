@model IEnumerable<RouteOptimization.Infrastructure.Order>

<div style="width: 100%; height: 400px; overflow: scroll; border: 5px black; background-color: #ccc;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Retailer Name")
            </th>
            <th>
                @Html.DisplayName("Store Name")
            </th>
            <th>
                @Html.DisplayName("Delivery Date")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Retailer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Store.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("View Order Detail", "Edit", new { id = item.OrderID })
                </td>
            </tr>
        }

    </table>
</div>